<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:scrollbars="none"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_marginTop="35sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO A GESTIÓN DE USUARIOS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de Administración de Gestion de Usuario"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <!-- Usuarios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuarios"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esta sección organiza los usuarios y asignación de su rol."
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="15px"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGesUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:backgroundTint="#003366"
            android:elevation="4dp"
            android:text="@string/nav_icon_user"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_users"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Función: Permite ver información detallada sobre los productos disponibles, como su nombre, descripción, precio, cantidad en stock, etc. También puede permitir agregar, editar o eliminar productos."
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <!-- Roles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roles"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esta sección organiza los roles."
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:backgroundTint="#6699cc"
            android:elevation="4dp"
            android:text="@string/nav_icon_tools"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
           app:icon="@drawable/ic_tools"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Función: Permite agrupar productos similares juntos para una mejor organización y búsqueda. Los usuarios pueden explorar productos dentro de una categoría específica y también pueden agregar, editar o eliminar categorías."
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

    </LinearLayout>
</ScrollView>





